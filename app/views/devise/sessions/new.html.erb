<h2>Sign in</h2>

<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
	<fieldset>
		<legend>In just a few short seconds you'll be publicizing your Tracker!</legend>
	  <div class="control-group">
	  	<%= f.label :email, :class => "control-label" %>
			<div class="controls">
	  		<%= f.email_field :email, :class => "input-xlarge" %>
			</div>
		</div>

		<div class="control-group">
			<%= f.label :password, :class => "control-label" %>
			<div class="controls">
				<%= f.password_field :password, :class => "input-xlarge" %>
			</div>
		</div>

	  <% if devise_mapping.rememberable? -%>
	    <div>
				<div class="pull-left" style="padding-right: 8px;"><%= f.check_box :remember_me, :id => "optionsCheckbox" %></div><%= f.label :remember_me, :class => "control-label" %>
			</div>
	  <% end -%>

		<div class="form-actions">
			<%= f.submit "Sign in", :class => "btn btn-primary" %>
			<div class="pull-right"><%= render "links" %></div>
		</div>
	</fieldset>
<% end %>